<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/BaseScreenLayout"
    android:id="@+id/search_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/TopLayout"
        android:id="@+id/top_search_toolbar"
        app:title="@string/search" />

    <FrameLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edittext_rounded_bg"
            android:drawableStart="@drawable/gray_search"
            android:drawablePadding="12dp"
            android:fontFamily="@font/ys_display_medium"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:textColor="@color/YP_black"
            android:textColorHint="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/edit_text_cursor" />

        <ImageButton
            android:id="@+id/clear_text_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/clean_text_button_description"
            android:src="@drawable/close_delete_text"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/test_recycler"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


